    <string name="conditions_section1_text">By accessing and using GameSage, you agree to comply with these terms and conditions.</string>
    <string name="conditions_section2_title">2. Use of Service</string>
    <string name="conditions_section2_text">You must use GameSage responsibly and legally. Not allowed:</string>
    <string name="conditions_section2_bp1">Using the service for illegal activities</string>
    <string name="conditions_section2_bp2">Attempting to access other users\' accounts</string>
    <string name="conditions_section2_bp3">Distributing malware or harmful content</string>
    <string name="conditions_section2_bp4">Reverse engineering the service</string>
    <string name="conditions_section3_title">3. User Accounts</string>
    <string name="conditions_section3_text">You are responsible for maintaining the confidentiality of your account and password.</string>
    <string name="conditions_section4_title">4. Purchases and Payments</string>
    <string name="conditions_section4_text">All prices are in Euros and include VAT. Purchases are final unless stated otherwise.</string>
    <string name="conditions_section5_title">5. Intellectual Property</string>
    <string name="conditions_section5_text">All GameSage content is protected by copyright and other intellectual property laws.</string>
    <string name="conditions_section6_title">6. Limitation of Liability</string>
    <string name="conditions_section6_text">GameSage is not responsible for indirect, incidental, or consequential damages arising from the use of the service.</string>
    <string name="conditions_section7_title">7. Modifications</string>
    <string name="conditions_section7_text">We reserve the right to modify these terms at any time.</string>
    <string name="conditions_section8_title">8. Contact</string>
    <string name="conditions_section8_text">For questions about these terms, contact us at info.gamesage@gmail.com</string>

    <string name="cookies_section1_title">1. What are cookies?</string>
    <string name="cookies_section1_text">Cookies are small text files stored on your device when you visit a website.</string>
    <string name="cookies_section2_title">2. Types of cookies we use</string>
    <string name="cookies_type_essential_title">Essential Cookies</string>
    <string name="cookies_type_essential_desc">Necessary for the basic functioning of the website.</string>
    <string name="cookies_type_pref_title">Preference Cookies</string>
    <string name="cookies_type_pref_desc">Remember your preferences such as language and settings.</string>
    <string name="cookies_type_analytics_title">Analytics Cookies</string>
    <string name="cookies_type_analytics_desc">Help us understand how you use the site to improve it.</string>
    <string name="cookies_type_marketing_title">Marketing Cookies</string>
    <string name="cookies_type_marketing_desc">Personalize ads based on your interests.</string>
    <string name="cookies_section3_title">3. How to manage cookies</string>
    <string name="cookies_section3_text">You can configure your browser to reject cookies, but this may affect site functionality.</string>
    <string name="cookies_section4_title">4. More information</string>
    <string name="cookies_section4_text">For more information about our cookie policy, contact us at info.gamesage@gmail.com</string>

    <string name="privacy_section1_title">1. Information We Collect</string>
    <string name="privacy_section1_text">We collect the following information:</string>
    <string name="privacy_section1_bp1">Name and email address</string>
    <string name="privacy_section1_bp2">Payment information (processed securely)</string>
    <string name="privacy_section1_bp3">Purchase history and preferences</string>
    <string name="privacy_section1_bp4">Usage and navigation data</string>
    <string name="privacy_section1_bp5">IP address and device data</string>
    <string name="privacy_section2_title">2. How We Use Your Information</string>
    <string name="privacy_section2_text">We use your information to:</string>
    <string name="privacy_section2_bp1">Process your orders and transactions</string>
    <string name="privacy_section2_bp2">Improve our services</string>
    <string name="privacy_section2_bp3">Send you updates and offers (with your consent)</string>
    <string name="privacy_section2_bp4">Comply with legal obligations</string>
    <string name="privacy_section2_bp5">Prevent fraud and ensure security</string>
    <string name="privacy_section3_title">3. Sharing Information</string>
    <string name="privacy_section3_text">We do not sell your personal information. We only share it with:</string>
    <string name="privacy_section3_bp1">Payment service providers</string>
    <string name="privacy_section3_bp2">Analytics and marketing services</string>
    <string name="privacy_section3_bp3">Authorities when legally required</string>
    <string name="privacy_section4_title">4. Data Security</string>
    <string name="privacy_section4_text">We implement technical and organizational security measures to protect your information.</string>
    <string name="privacy_section5_title">5. Your Rights</string>
    <string name="privacy_section5_text">You have the right to:</string>
    <string name="privacy_section5_bp1">Access your personal data</string>
    <string name="privacy_section5_bp2">Rectify incorrect information</string>
    <string name="privacy_section5_bp3">Request deletion of your data</string>
    <string name="privacy_section5_bp4">Object to the processing of your data</string>
    <string name="privacy_section5_bp5">Data portability</string>
    <string name="privacy_section6_title">6. Cookies</string>
    <string name="privacy_section6_text">We use cookies to improve your experience. See our Cookie Policy for more information.</string>
    <string name="privacy_section7_title">7. Changes to this Policy</string>
    <string name="privacy_section7_text">We may update this policy occasionally. We will notify you of significant changes.</string>
    <string name="privacy_section8_title">8. Contact</string>
    <string name="privacy_section8_text">To exercise your rights or ask privacy questions, contact us at info.gamesage@gmail.com</string>
