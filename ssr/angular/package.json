{
  "name": "game-sage",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:ssr": "npm run serve:ssr",
    "build": "ng build",
    "build:ssr": "cross-env SSR_DISABLE_BACKEND=1 ng build",
    "build:full": "npx prisma generate && npm run seed:admin && npm run build:ssr",
    "serve:ssr": "node dist/game-sage/server/server.mjs",
    "dev": "npm run dev:backend",
    "dev:backend": "nodemon --config nodemon.backend.json",
    "watch": "ng build --watch --configuration development",
    "test": "npm run test:backend",
    "test:frontend": "ng test",
    "test:backend": "cross-env NODE_ENV=test NODE_NO_WARNINGS=1 NODE_OPTIONS=--experimental-vm-modules jest --config jest.backend.config.js",
    "seed:admin": "tsx src/backend/scripts/seedAdmin.ts",
    "clean:data": "tsx src/backend/scripts/cleanData.ts",
    "seed:data": "npm run clean:data && tsx src/backend/scripts/seedData.ts",
    "format": "npx prettier --write \"**/*.{ts,js,html,css,json}\"",
    "clean": "npx rimraf dist logs coverage",
    "clean:full": "npx rimraf dist node_modules logs coverage",
    "reinstall": "npm run clean:full && npm install"
  },
  "private": true,
  "dependencies": {
    "@ai-sdk/google": "^2.0.46",
    "@angular/animations": "20.3.16",
    "@angular/common": "20.3.16",
    "@angular/compiler": "20.3.16",
    "@angular/core": "20.3.16",
    "@angular/fire": "^20.0.1",
    "@angular/forms": "20.3.16",
    "@angular/platform-browser": "20.3.16",
    "@angular/platform-browser-dynamic": "20.3.16",
    "@angular/platform-server": "20.3.16",
    "@angular/router": "20.3.16",
    "@angular/ssr": "^20.3.16",
    "@google/generative-ai": "^0.24.1",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "@prisma/client": "^6.18.0",
    "@types/jsonwebtoken": "^9.0.10",
    "ai": "^5.0.112",
    "bcryptjs": "^2.4.3",
    "bootstrap": "5.3.3",
    "bootstrap-icons": "^1.13.1",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "firebase": "^11.10.0",
    "helmet": "^8.1.0",
    "imagemagick": "^0.1.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
