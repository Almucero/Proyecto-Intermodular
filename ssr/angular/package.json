    "swagger-ui-express": "^5.0.1",
    "tslib": "^2.3.0",
    "winston": "^3.18.3",
    "zod": "^3.24.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "20.3.16",
    "@angular/cli": "20.3.16",
