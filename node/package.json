{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "description": "API REST para gestión de autenticación, usuarios, videojuegos, desarrolladoras, publishers, géneros, plataformas y archivos multimedia con autenticación JWT, validación Zod, rate limiting y testing completo",
  "main": "dist/src/index.js",
  "scripts": {
    "dev": "npm run seed:admin && nodemon src/index.ts",
    "seed:admin": "tsx src/scripts/seedAdmin.ts",
    "seed:data": "npm run clean:data && tsx src/scripts/seedData.ts",
    "clean:data": "tsx src/scripts/cleanData.ts",
    "build": "tsc -p .",
    "build:full": "prisma generate && npm run seed:admin && npm run build",
    "start": "node dist/src/index.js",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "format": "npx prettier --write \"**/*.{ts,js,html,css,json}\"",
    "postinstall": "prisma generate",
    "clean": "npx rimraf dist logs coverage",
    "clean:full": "npx rimraf dist node_modules logs coverage",
    "reinstall": "npm run clean:full && npm install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ai-sdk/google": "^2.0.44",
    "@prisma/client": "^6.18.0",
    "@types/swagger-ui-express": "^4.1.8",
    "ai": "^5.0.107",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "imagemagick": "^0.1.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.11",
    "p-limit": "^7.2.0",
    "sharp": "^0.34.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "cross-env": "^7.0.3",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.18.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
