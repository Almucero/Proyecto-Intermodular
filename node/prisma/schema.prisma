generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Developer {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  games     Game[]
}

model Publisher {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  Game      Game[]
}

model Platform {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  games     Game[]   @relation("GamePlatforms")
}

model Genre {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  games     Game[]   @relation("GameGenres")
}

model Game {
  id            Int        @id @default(autoincrement())
  title         String
  description   String?
  price         Decimal?   @db.Decimal(12,2)
  isOnSale      Boolean    @default(false)
  salePrice     Decimal?   @db.Decimal(12,2)
  isRefundable  Boolean    @default(false)
  numberOfSales Int        @default(0)
  stock         Int        @default(0)
  videoUrl      String?
  rating        Float?
  releaseDate   DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @default(now()) @updatedAt
  genres        Genre[]      @relation("GameGenres")
  platforms     Platform[]   @relation("GamePlatforms")
  media         Media[]
  favorites     Favorite[]
  cartItems     CartItem[]
  purchases     Purchase[]
  publisherId   Int?
  developerId   Int?
  Publisher     Publisher?  @relation(fields: [publisherId], references: [id], onDelete: SetNull)
  Developer     Developer?  @relation(fields: [developerId], references: [id], onDelete: SetNull)

  @@index([developerId])
  @@index([publisherId])
}

model Media {
  id           Int      @id @default(autoincrement())
  url          String
  publicId     String?  @unique
  format       String?
  resourceType String?
  bytes        Int?
  width        Int?
  height       Int?
  originalName String?
  folder       String?
  altText      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  gameId       Int?
  Game         Game?    @relation(fields: [gameId], references: [id], onDelete: Cascade)
  userId       Int?
  User         User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([gameId])
  @@index([userId])
}

model User {
  id           Int      @id @default(autoincrement())
  accountId    String?  @unique @default(cuid())
  email        String   @unique
  accountAt    String?  @unique
  nickname     String?
  name         String
  surname      String?
  passwordHash String
  balance      Decimal? @db.Decimal(12,2)
  points       Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now()) @updatedAt
  isAdmin      Boolean  @default(false)
  addressLine1 String?
  addressLine2 String?
  city         String?
  region       String?
  postalCode   String?
  country      String?
  media        Media[]
  favorites    Favorite[]
  cartItems    CartItem[]
  purchases    Purchase[]
}

model Favorite {
  id        Int      @id @default(autoincrement())
  userId    Int
  gameId    Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  game      Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([userId, gameId])
  @@index([userId])
  @@index([gameId])
}

model CartItem {
  id        Int      @id @default(autoincrement())
  userId    Int
  gameId    Int
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  game      Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([userId, gameId])
  @@index([userId])
  @@index([gameId])
}

model Purchase {
  id           Int      @id @default(autoincrement())
  userId       Int
  gameId       Int
  price        Decimal  @db.Decimal(12,2)
  status       String   @default("completed")
  refundReason String?
  purchasedAt  DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  game         Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([gameId])
  @@index([purchasedAt])
}
