generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Developer {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  games     Game[]
}

model Publisher {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  Game      Game[]
}

model Platform {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  games         Game[]         @relation("GamePlatforms")
  favorites     Favorite[]
  cartItems     CartItem[]
  purchaseItems PurchaseItem[]
}

model Genre {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  games     Game[]   @relation("GameGenres")
}

model Game {
  id            Int        @id @default(autoincrement())
  title         String
  description   String?
  price         Decimal?   @db.Decimal(12,2)
  isOnSale      Boolean    @default(false)
  salePrice     Decimal?   @db.Decimal(12,2)
  isRefundable  Boolean    @default(false)
  numberOfSales Int        @default(0)
  stockPc       Int        @default(0)
  stockPs5      Int        @default(0)
  stockXboxX    Int        @default(0)
  stockSwitch   Int        @default(0)
  stockPs4      Int        @default(0)
  stockXboxOne  Int        @default(0)
  videoUrl      String?
  rating        Float?
  releaseDate   DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @default(now()) @updatedAt
  genres        Genre[]      @relation("GameGenres")
  platforms     Platform[]   @relation("GamePlatforms")
  media         Media[]
  favorites     Favorite[]
  cartItems     CartItem[]
  purchaseItems PurchaseItem[]
  publisherId   Int?
  developerId   Int?
  Publisher     Publisher?  @relation(fields: [publisherId], references: [id], onDelete: SetNull)
  Developer     Developer?  @relation(fields: [developerId], references: [id], onDelete: SetNull)

  @@index([developerId])
  @@index([publisherId])
}

model Media {
  id           Int      @id @default(autoincrement())
  url          String
  publicId     String?  @unique
  format       String?
  resourceType String?
  bytes        Int?
  width        Int?
  height       Int?
  originalName String?
  folder       String?
  altText      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  gameId       Int?
  Game         Game?    @relation(fields: [gameId], references: [id], onDelete: Cascade)
  userId       Int?
  User         User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([gameId])
  @@index([userId])
}

model User {
  id           Int      @id @default(autoincrement())
  accountId    String?  @unique @default(cuid())
  email        String   @unique
  accountAt    String?  @unique
  nickname     String?
  name         String
  surname      String?
  passwordHash String
  balance      Decimal? @db.Decimal(12,2)
  points       Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now()) @updatedAt
  isAdmin      Boolean  @default(false)
  addressLine1 String?
  addressLine2 String?
  city         String?
  region       String?
  postalCode   String?
  country      String?
  media        Media[]
  favorites    Favorite[]
  cartItems    CartItem[]
  purchases    Purchase[]
}

model Favorite {
  id         Int      @id @default(autoincrement())
  userId     Int
  gameId     Int
  platformId Int
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  game       Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  platform   Platform @relation(fields: [platformId], references: [id], onDelete: Cascade)

  @@unique([userId, gameId, platformId])
  @@index([userId])
  @@index([gameId])
  @@index([platformId])
}

model CartItem {
  id         Int      @id @default(autoincrement())
  userId     Int
  gameId     Int
  platformId Int
  quantity   Int      @default(1)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  game       Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  platform   Platform @relation(fields: [platformId], references: [id], onDelete: Cascade)

  @@unique([userId, gameId, platformId])
  @@index([userId])
  @@index([gameId])
  @@index([platformId])
}

model Purchase {
  id           Int            @id @default(autoincrement())
  userId       Int
  totalPrice   Decimal        @db.Decimal(12, 2)
  status       String         @default("completed")
  refundReason String?
  purchasedAt  DateTime       @default(now())
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  items        PurchaseItem[]

  @@index([userId])
  @@index([status])
  @@index([purchasedAt])
}

model PurchaseItem {
  id         Int      @id @default(autoincrement())
  purchaseId Int
  gameId     Int
  platformId Int
  price      Decimal  @db.Decimal(12, 2)
  quantity   Int      @default(1)
  purchase   Purchase @relation(fields: [purchaseId], references: [id], onDelete: Cascade)
  game       Game     @relation(fields: [gameId], references: [id], onDelete: Restrict)
  platform   Platform @relation(fields: [platformId], references: [id], onDelete: Cascade)

  @@index([purchaseId])
  @@index([gameId])
  @@index([platformId])
}
