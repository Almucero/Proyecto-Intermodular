{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'none';"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/$1"
    }
  ],
  "functions": {
    "api/index.mjs": {
      "includeFiles": "dist/game-sage/**"
    }
  }
}
